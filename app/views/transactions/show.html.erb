<p style="color: green"><%= notice %></p>


<%= render "shared/pageheader", name: "Transaction ##{params[:id]}" %>

<div class="container mobile d-flex flex-column align-items-center" style="margin-top: 30px;">
  <p class="bold" style="font-size: 44px; text-align: center;">-$24.99</p>

  <%= render "shared/notestab", name: "Notes", info: @transaction.description %>

  <%= render "shared/detailtab", name: "Date", info: @transaction.date, icon: "fa-solid fa-wallet fa-lg" %>

  <%= render "shared/detailtab", name: "Category", info: @transaction.category_id, icon: "fa-solid fa-wallet fa-lg" %>

  <%= render "shared/detailtab", name: "Account", info: @transaction.main_wallet_id, icon: "fa-solid fa-wallet fa-lg" %>

  <%= render "shared/detailtab", name: "Type", info: @transaction.txn_type.capitalize, icon: "fa-solid fa-wallet fa-lg" %>

  <div>
    <%= link_to "Edit this transaction", edit_transaction_path(@transaction), class: "btn-small-primary" %>
    <br>
    <%= button_to "Destroy this transaction", @transaction, method: :delete, class: "btn-small-secondary" %>
  </div>
</div>
