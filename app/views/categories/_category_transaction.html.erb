<%# income transactions  %>
 <% if category.income? %>
    <% transactions.each do |t| %>
      <%= category.name %>
      <%= t.main_wallet.name %>
      <%= t.date %>
      <%= t.amount %>
      <br>
    <% end %>
  <% end %>

