<p style="color: green"><%= notice %></p>

<%#= render @category %>
<h1><%= @category.name %></h1>

<div class="div">

  <p><%= "Total Outflow This Month" if @category.expense?%></p>
  <p><%= "Total Inflow This Month" if @category.income?%></p>
  <p><strong><%= @sum %></strong></p>
</div>

<div class="div">
  <p>Notes</p>
  <p><%= @category.description %></p>
</div>

<div class="div">
  <p>Transaction History</p>
  <% @transactions.each do |t| %>
    <%= t.amount %>
    <%= t.main_wallet.name %>
  <% end %>
  <%= render "category_transaction" %>
</div>


<div>
  <%= link_to "Edit this category", edit_category_path(@category) %>
  <%= link_to "Back to categories", categories_path %>

  <%= button_to "Destroy this category", @category, method: :delete %>
</div>
