<%= render "shared/pageheader", name: "Your Uploaded Transactions" %>

<% x = 0 %>
<div class="container mobile d-flex flex-column justify-content-center    " style="margin-top: 30px;">
  <p>It took only 3.5 seconds to upload <%= @array.count %> transactions!</p>
  <% @array.each do |t| %>
    <% x += 1 %>
    <%= x %>.
    <%= t.description %> -
    <%= date(t) %> -
    <%= number_to_currency(t.amount) %>
    <br>
  <% end %>
</div>
