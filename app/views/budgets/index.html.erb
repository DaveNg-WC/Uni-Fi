<p style="color: green"><%= notice %></p>

<div class="container mobile d-flex flex-column justify-content-center" style="margin-top: 30px;">

  <h3>Budgets</h3>

  <% @budgets.each do |budget| %>

    <% spends = 0  %>
    <% budget.categories.each do |c| %>
      <% spends += c.balance  %>
    <% end %>

    <a href="/budgets/<%= budget.id %>" method="get">
      <div style="margin-bottom: 15px;">
        <%= render "shared/categorytab", name: budget.name, balance: budget.amount, icon: "fa-solid fa-wallet fa-lg" %>
      </div>
    </a>
  <% end %>

  <%= link_to "Create New budget", new_budget_path %>
</div>
