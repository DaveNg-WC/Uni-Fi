<%= render "shared/pageheader", name: "Forgot Your Password?" %>

<div class="container mobile d-flex flex-column justify-content-center" style="margin-top: 30px;">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <p>Enter the email address associated with your account and we'll send you a link to reset your password.</p>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email",
                                class: "form-input" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Continue", class: 'btn-small-primary', style: "margin-bottom: 20px;" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
