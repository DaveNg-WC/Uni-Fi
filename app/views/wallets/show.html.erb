<p style="color: green"><%= notice %></p>

<!-- this handles the back button, name of page -->

<div class="container mobile page-header" style="margin-bottom: 10px">
  <a href="<%= request.referer %>">
    <i class="fa-solid fa-arrow-left side-icon fa-xl"></i>
  </a>
  <h2 class="header bold" style="text-align: center;"><%= @wallet.name %></h2>
  <div></div> <!-- this extra div allows the space between to work properly in 3 segments, and allows home button to be at the end-->
</div>

<div class="container mobile d-flex flex-column justify-content-center" style="margin-top: 30px;">
  <div class="info-tab green" style="margin-bottom: 20px;">
    <div class="info-icon">
      <i class="fa-solid fa-money-bill fa-lg green-icon"></i>
    </div>
    <div class="info-tab-right">
      <p class="info-tab-right-top"><%= @wallet.wallet_type == "Debit" ? 'Total Balance:' : 'Total Amount Spent:' %></p>
      <p class="info-tab-right-btm"><%= balance(@wallet) %></p>
    </div>
  </div>

  <% if @wallet.is_hidden %>
    <%= "This Wallet is DELETED" %>
    <div>
      <%= link_to "Back to wallets", wallets_path %>
    </div>
  <% else %>
    <%# <strong><%= @wallet.wallet_type == "Debit" ? 'Balance:' : 'Amount Spent:' %></strong>
    <%# <%= @balance %>
    <%# <%= render @wallet %> %>

    <div>
      <%= link_to "Edit this wallet", edit_wallet_path(@wallet), class: "btn-small-secondary" %> |
      <%= link_to "Back to wallets", wallets_path, class: "btn-small-secondary" %>

      <%= button_to "Destroy this wallet", @wallet, method: :delete, class: 'btn-small-secondary' %>
    </div><br>

    <h2 class="header bold" style="text-align: center;">Transactions</h2>

    <div id="transactions">
      <% @transactions.take(3).each do |transaction| %>

        <%= render transaction %>
        <p>
          <%= link_to "Show this transaction", transaction, class: "btn-small-primary" %>
        </p>
      <% end %>
      <%= link_to "All transaction", wallet_transactions_path(@wallet), class: "btn-small-primary" %>

    </div>
  <% end %>
</div>
